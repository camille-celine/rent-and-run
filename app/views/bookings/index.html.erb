<div class="container container-index">
  <h2>My Bookings</h2>
  <div class="cards-listings row">
    <% @bookings.each do |booking| %>
      <div class="col-12 col-lg-3">
        <div class="card-listing">
        <%= image_tag "tennis.jpg", alt: "Find", class: "card-listing-img" %>
          <div class="card-listing-description">
            <div class="card-title">
              <h3><%= booking.listing.name %></h3>
              <p><%= booking.listing.category %></p>
            </div>
            <div class="card-details">
                <div>
                  <p><%= booking.listing.location %> <%= image_tag "pin.png", width: 15 %></p>
                </div>
                <div class="card-price">
                  <p><%= booking.listing.user.name %></p>
                  <p><%= booking.listing.price %>â‚¬</p>
                </div>
            </div>
          </div>
          </div>
      </div>
      <% end %>
  </div>
</div>
