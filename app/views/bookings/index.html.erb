<div class="container container-index">
  <h2>My Bookings</h2>
  <div class="cards-listings row">
    <% @bookings.each do |booking| %>
      <div class="col-12 col-lg-3">
        <div class="card-listing">
        <%= cl_image_tag booking.listing.photo.key, alt: "Find", class: "card-listing-img" %>
        <%= link_to "See item", listing_path(booking.listing) %>
          <div class="card-listing-description">
            <div class="card-title">
              <h3><%= booking.listing.name.truncate(16) %></h3>
              <p><%= booking.listing.category %></p>
            </div>
            <div class="card-details">
                <div>
                  <p><%= booking.listing.location.truncate(16) %> <%= image_tag "pin.png", width: 15 %></p>
                </div>
                <div class="card-price">
                  <p><%= booking.listing.user.name %></p>
                  <p><%= booking.listing.price %>â‚¬</p>
                </div>
            </div>
          </div>
          </div>
      </div>
      <% end %>
  </div>
</div>
