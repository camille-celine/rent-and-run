<div class="row justify-content-center" id="new-form">
   <div class="card-product">
     <%= image_tag "equipment.jpg", alt: "Find", class: "image-form"%>
    <div class="card-product-infos">
      <h2 class="text-center">Create a Listing</h2>
        <%= simple_form_for @listing do |f| %>
          <%= f.input :name %>
          <%= f.input :category, collection: ["Football", "Basketball", "Tennis", "Baseball", "American football", "Baseball", "Combat sports", "Golf", "Volleyball", "Other"] %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.input :location %>
          <%= f.input :availability %>
          <%= f.input :photo, as: :file, label: "Image of item:" %>
          <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <p><%= link_to "See all Listings", listings_path %></p>
</div>